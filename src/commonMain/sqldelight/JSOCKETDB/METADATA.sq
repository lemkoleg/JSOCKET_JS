table_MetaData:
CREATE TABLE IF NOT EXISTS MetaData
(VALUE_NAME TEXT PRIMARY KEY,
 VALUE_VALUE INTEGER  NOT NULL,
 LAST_UPDATE INTEGER  NOT NULL
);

insert_MetaData:
REPLACE INTO MetaData
 (VALUE_NAME,
  VALUE_VALUE,
  LAST_UPDATE) VALUES (?, ?, ?);

clear_MetaData:
DELETE FROM MetaData;

select_MetaData_all:
SELECT * FROM MetaData;