table_MetaData:
CREATE TABLE IF NOT EXISTS MetaData
(VALUE_NAME TEXT PRIMARY KEY,     --STRING_1
 VALUE_VALUE INTEGER  NOT NULL,   --LONG_1
 LAST_UPDATE INTEGER  NOT NULL    --LONG_2
);

insert_MetaData:
INSERT OR REPLACE INTO MetaData
 (VALUE_NAME,
  VALUE_VALUE,
  LAST_UPDATE) VALUES (?, ?, ?);

clear_MetaData:
DELETE FROM MetaData;

select_MetaData_all:
SELECT * FROM MetaData;